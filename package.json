{
  "name": "@canonical/svelte-icons",
  "version": "0.0.4",
  "description": "Canonical's icons as Svelte components",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/canonical/svelte-icons.git"
  },
  "keywords": [
    "svelte",
    "icons",
    "canonical"
  ],
  "author": {
    "email": "webteam@canonical.com",
    "name": "Canonical Webteam"
  },
  "license": "LGPL-3.0",
  "files": [
    "dist",
    "!dist/**/.gitkeep"
  ],
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun run clean:icons && bun run build:icons && bun run build:package",
    "build:icons": "bun run scripts/build-icons.ts node_modules/@canonical/ds-assets/icons/ src/lib/icons",
    "build:package": "svelte-package -o dist -i src/lib --tsconfig ./tsconfig.app.json",
    "build:stories": "bun run scripts/build-stories.ts src/lib/icons src/stories/icons",
    "clean": "bun run clean:icons && bun run clean:stories",
    "clean:icons": "rm -f src/lib/icons/*.svelte src/lib/icons/index.ts",
    "clean:stories": "rm -f src/stories/icons/*.svelte",
    "check": "bun run check:biome && bun run check:ts",
    "check:fix": "bun run check:biome:fix && bun run check:ts",
    "check:biome": "biome check",
    "check:biome:fix": "biome check --write",
    "check:ts": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "storybook": "bun run clean && bun run build:icons && bun run build:stories && storybook dev -p 6006 --no-open",
    "build-storybook": "bun run clean && bun run build:icons && bun run build:stories && storybook build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@canonical/biome-config": "^0.10.0-experimental.4",
    "@canonical/ds-assets": "^0.10.0-experimental.6",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/svelte-vite": "^10.0.8",
    "@storybook/theming": "^8.6.14",
    "@sveltejs/package": "^2.5.6",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.6",
    "@types/bun": "^1.3.3",
    "@types/node": "^24.10.1",
    "storybook": "^10.0.8",
    "svelte-check": "^4.3.4",
    "typescript": "~5.9.3",
    "vanilla-framework": "^4.37.1",
    "vite": "^7.2.4"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  }
}
